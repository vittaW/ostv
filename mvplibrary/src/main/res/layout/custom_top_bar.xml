<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="@dimen/toolbar_height"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@mipmap/app_back"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="center"
        android:src="@mipmap/base_close_icon"
        android:visibility="gone"
        tools:visibility="visible" />

    <cn.xiaomatv.xiaomatv.widget.textview.MarqueTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/toolbar_height"
        android:layout_marginRight="@dimen/toolbar_height"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="@dimen/font_size_17"
        android:visibility="gone"
        tools:text="我是一个居中的标题"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/image_view_right"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/topbar_image_view_more"
        android:visibility="gone"
        tools:visibility="visible" />

    <cn.xiaomatv.xiaomatv.widget.textview.XTextView
        android:id="@+id/text_view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/widget_size_14"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/widget_size_5"
        android:text="全部关注"
        android:textColor="#424242"
        android:textSize="@dimen/font_size_17"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2" />

</RelativeLayout>